{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noEmit": false
  },
  "include": ["server/**/*.ts", "types.ts", "constants.ts"],
  "exclude": ["node_modules", "dist", "build", "src"]
}
